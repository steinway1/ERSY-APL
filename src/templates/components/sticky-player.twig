<div class="sticky-player is-visible">
	<div class="sticky-player__progress-bar">
		<div class="sticky-player__current-progress"></div>
	</div>
	<div class="sticky-player__main">
		<div class="sticky-player__content">
			<div class="sticky-player__video-wrapper">
				<img src="./assets/song-cover.jpeg" loading="lazy" alt="" class="sticky-player__video">
			</div>
			<div class="sticky-player__details">
				<span class="sticky-player__song-name">Bam Bam (Official Music Video) ft. Ed Sheeran</span>
				<span class="sticky-player__artist">Camilla Cabello</span>
			</div>
		</div>
		<div class="sticky-player__controls">
			<div data-player-evt="nextItem" class="player-btn">
				{% include "../svg/player-next.svg" %}
			</div>
			<div data-player-evt="addFav" class="player-btn">
				{% include "../svg/heart.twig" with { width: 18, height: 18 } %}
			</div>
		</div>
	</div>
</div>
